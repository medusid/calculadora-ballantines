<body>
  <div class="container">
    <h1>Calculadora</h1>

    <div class="item"><span>RADAR (R$ 5.000)</span><input type="number" id="radar" min="0" value="0" /></div>
    <div class="item"><span>C4 (R$ 10.000)</span><input type="number" id="c4" min="0" value="0" /></div>
    <div class="item"><span>TABLET (R$ 45.000)</span><input type="number" id="tablet" min="0" value="0" /></div>
    <div class="item"><span>GRAMPO (R$ 5.000)</span><input type="number" id="grampo" min="0" value="0" /></div>
    <div class="item"><span>CART√ÉO B√ÅSICO (R$ 5.000)</span><input type="number" id="basico" min="0" value="0" /></div>
    <div class="item"><span>CART√ÉO BLACK (R$ 15.000)</span><input type="number" id="black" min="0" value="0" /></div>
    <div class="item"><span>CART√ÉO SUPREMO (R$ 25.000)</span><input type="number" id="supremo" min="0" value="0" /></div>

    <div class="checkbox">
      <input type="checkbox" id="parceria" />
      <label for="parceria">Aplicar parceria (-20%)</label>
    </div>

    <button onclick="calcular()">Calcular Total</button>

    <div class="resultado" id="resultado">Total: R$ 0</div>
    <div class="brinde" id="brinde"></div>
  </div>

  <script>
    function calcular() {
      const valores = {
        radar: 5000,
        c4: 10000,
        tablet: 45000,
        grampo: 5000,
        basico: 5000,
        black: 15000,
        supremo: 25000
      };

      let total = 0;

      for (let item in valores) {
        const quantidade = Number(document.getElementById(item).value) || 0;
        total += quantidade * valores[item];
      }

      if (document.getElementById('parceria').checked) {
        total *= 0.8;
      }

      document.getElementById('resultado').innerText = 'Total: R$ ' + total.toLocaleString('pt-BR');

      const brindes = Math.floor(total / 100000);
      const brindeDiv = document.getElementById('brinde');

      if (brindes > 0) {
        const tipos = [];
        for (let item in valores) {
          const qtd = Number(document.getElementById(item).value) || 0;
          if (qtd > 0) {
            if (item === 'grampo') tipos.push('Grampo');
            if (item === 'basico' || item === 'black' || item === 'supremo') tipos.push('Cart√£o');
            if (item === 'radar') tipos.push('Radar');
            if (item === 'c4') tipos.push('C4');
            if (item === 'tablet') tipos.push('Tablet');
          }
        }

        const tipoTexto = tipos.length ? [...new Set(tipos)].join(', ') : 'Item comprado';
        brindeDiv.innerText = `üéÅ AVISO DE BRINDE: ${brindes} brinde(s) do mesmo tipo (${tipoTexto}).`;
      } else {
        brindeDiv.innerText = '';
      }
    }
  </script>
